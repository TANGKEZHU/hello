<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/MyAnimation</item>
    </style>

    <style name="MyAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/in_righttoleft</item>
        <item name="android:activityOpenExitAnimation">@anim/out_righttoleft</item>
        <item name="android:activityCloseEnterAnimation">@anim/in_lefttoright</item>
        <item name="android:activityCloseExitAnimation">@anim/out_lefttoright</item>
    </style>

    
        <!-- 标题栏样式==>左右按钮IB @color/setting_view_item_subtitle_text -->
    <style name="TitleTextViewB">
        <item name="android:layout_width">58dip</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:textColor">@drawable/select_titlebar_tv</item>
    </style>
    <!-- 标题栏样式==>左右按钮IB -->
    <style name="TitleIB">
        <item name="android:layout_width">48dip</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:padding">15dp</item>
        <item name="android:gravity">center</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:background">@drawable/sl_ib_tr_a1</item>
    </style>

    <!-- 标题栏样式==>左右按钮BTN -->
    <style name="TitleBTN">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/sl_ib_tr_a1</item>
        <item name="android:textSize">@dimen/text_smallsize</item>
    </style>

    <!-- 标题栏样式==>主标题 -->
    <style name="TitleTV">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/textWhite</item>
        <item name="android:textSize">@dimen/text_bigsize</item>
    </style>
    
    
</resources>